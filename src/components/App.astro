---

import config from "../../config"

const app = config.App
---
<div class="flex flex-col-reverse md:flex-row md:h-[100vh]">
    <div class="md:w-4/6 items-center justify-bottom flex flex-col md:flex-row relative h-[710px]">
        <img class="w-[325px] md:w-[340px] rounded-3xl md:-rotate-[10deg] shadow-xl md:left-[20%] z-1 md:hover:scale-[1.25] left-10  -top-10 md:top-20 absolute transition hover:z-50" src={app.ScreenShotFirst} alt="应用截图">
        <img class="w-[325px] md:w-[340px] rounded-3xl  md:rotate-[10deg] shadow-xl md:left-[50%] z-1 md:hover:scale-[1.25] right-10 -top-10 md:top-20 absolute transition  over:z-50" src={app.ScreenShotSecond} alt="插件截图">
    </div>

    <div class="md:w-2/6 flex flex-col md:relative">
        <div class="md:absolute bottom-64 flex flex-col">
            <div class="md:flex-grow lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
                <img src={app.Logo} class="rounded-3xl md:rounded-3xl w-32 md:w-32 mb-8 shadow-2xl"alt="MyServers logo"></img>
                <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">{app.Name}
                </h1>
                <p class="mb-8 leading-relaxed text-gray-100">{app.Descript}</p>
                <div class="flex justify-center">
                    <a target="_blank" href="https://apps.apple.com/us/app/myservers-%E7%9B%91%E6%8E%A7%E7%AE%A1%E7%90%86%E4%B8%AA%E4%BA%BA%E6%9C%8D%E5%8A%A1%E5%99%A8%E5%92%8C%E5%BA%94%E7%94%A8/id6466196656?ppid=69424426-5229-46c3-bc4f-a632dcc48353">
                        <button class="bg-gray-200 inline-flex py-3 px-5 rounded-lg items-center shadow-2xl hover:bg-gray-900 transition hover:text-white focus:outline-none bg-gray-100">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6" viewBox="0 0 305 305">
                                <path d="M40.74 112.12c-25.79 44.74-9.4 112.65 19.12 153.82C74.09 286.52 88.5 305 108.24 305c.37 0 .74 0 1.13-.02 9.27-.37 15.97-3.23 22.45-5.99 7.27-3.1 14.8-6.3 26.6-6.3 11.22 0 18.39 3.1 25.31 6.1 6.83 2.95 13.87 6 24.26 5.81 22.23-.41 35.88-20.35 47.92-37.94a168.18 168.18 0 0021-43l.09-.28a2.5 2.5 0 00-1.33-3.06l-.18-.08c-3.92-1.6-38.26-16.84-38.62-58.36-.34-33.74 25.76-51.6 31-54.84l.24-.15a2.5 2.5 0 00.7-3.51c-18-26.37-45.62-30.34-56.73-30.82a50.04 50.04 0 00-4.95-.24c-13.06 0-25.56 4.93-35.61 8.9-6.94 2.73-12.93 5.09-17.06 5.09-4.64 0-10.67-2.4-17.65-5.16-9.33-3.7-19.9-7.9-31.1-7.9l-.79.01c-26.03.38-50.62 15.27-64.18 38.86z"></path>
                                <path d="M212.1 0c-15.76.64-34.67 10.35-45.97 23.58-9.6 11.13-19 29.68-16.52 48.38a2.5 2.5 0 002.29 2.17c1.06.08 2.15.12 3.23.12 15.41 0 32.04-8.52 43.4-22.25 11.94-14.5 17.99-33.1 16.16-49.77A2.52 2.52 0 00212.1 0z"></path>
