---
import Feature from './Feature.astro'
import config from "../../config"

const features = config.Feature.AllFeatures
---

<div class="container px-5 py-24 mx-auto">
    <div class="text-center mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-800 mb-4">特征</h1>
      <p class="text-base leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto text-gray-100">为什么选择这个产品</p>
      <div class="flex mt-6 justify-center">
        <div class="w-16 h-1 rounded-full bg-gray-800 inline-flex"></div>
      </div>
    </div>
    <div class="flex grid grid-cols-1 md:grid-cols-3  -m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 md:space-y-6  items-center justify-center">

        {features.map((f) => {
            return <Feature title={f.title} desc={f.desc} url={f.url}></Feature>
        })}
    </div>
  </div>